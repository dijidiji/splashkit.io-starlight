{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ - Usage Example Testing",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/built-examples/${fileBasenameNoExtension}/Cpp_Testing/test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/built-examples/${fileBasenameNoExtension}/Cpp_Testing",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "linux": {
                "miDebuggerPath": "/usr/bin/gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Set Disassembly Flavor to Intel",
                        "text": "-gdb-set disassembly-flavor intel",
                        "ignoreFailures": true
                    }
                ],
            },
            "osx": {
                "MIMode": "lldb",
            },
            "windows": {
                "program": "${workspaceFolder}\\built-examples\\${fileBasenameNoExtension}\\Cpp_Testing\\test.exe",
                "cwd": "${workspaceFolder}\\built-examples\\${fileBasenameNoExtension}\\Cpp_Testing",
                "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Set Disassembly Flavor to Intel",
                        "text": "-gdb-set disassembly-flavor intel",
                        "ignoreFailures": true
                    }
                ],
            },
            "preLaunchTask": "Setup testing files"
        },
        {
            "name": "C# - Usage Example Testing",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/built-examples/${fileBasenameNoExtension}/CSharp_Testing/bin/Debug/net9.0/CSharp_Testing.dll",
            "args": [],
            "cwd": "${workspaceFolder}/built-examples/${fileBasenameNoExtension}/CSharp_Testing",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
            "windows": {
                "program": "${workspaceFolder}\\built-examples\\${fileBasenameNoExtension}\\CSharp_Testing\\bin\\Debug\\net9.0\\CSharp_Testing.dll",
                "cwd": "${workspaceFolder}\\built-examples\\${fileBasenameNoExtension}\\CSharp_Testing",
            },
            "preLaunchTask": "Setup testing files",
        },
        {
            "name": "Python - Usage Example Testing",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/built-examples/${fileBasenameNoExtension}/Python_Testing/program.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/built-examples/${fileBasenameNoExtension}/Python_Testing",
            "linux": {
                "cwd": "${workspaceFolder}/built-examples/${fileBasenameNoExtension}/Python_Testing"
            },
            "windows": {
                "cwd": "${workspaceFolder}\\built-examples\\${fileBasenameNoExtension}\\Python_Testing",
            },
            "preLaunchTask": "Setup testing files"
        }
    ]
}